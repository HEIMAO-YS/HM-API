{
  "name": "AVHUB",
  "base_url": "https://avhub20.com",
  "action_data": {
    "video_url": {
      "enable_js_redirect": false,
      "steps": [
        {
          "action": "request_js",
          "url": "{{base_url}}",
          "force_js": true,
          "timeout": 10
        },
        {
          "action": "select",
          "selector": ".list a",
          "attribute": "href",
          "multiple": true,
          "save_as": "domain_list"
        }
      ],
      "result": {
        "domains": [
          "https://avhub360.com",
          "{{domain_list}}"
        ],
        "wd_url": "/videos/<*>"
      },
      "logic": {
        "platform_names": [
          "AVHUB"
        ],
        "invalid": [
          {
            "type": "html",
            "selector": ".file-not-found .head-404",
            "match": "找不到页面",
            "method": "contains"
          }
        ],
        "valid": [
          {
            "type": "html",
            "selector": "button[data-plyr='play'], .plyr__control[data-plyr='play']",
            "match": "",
            "method": "contains",
            "min_count": 1
          },
          {
            "type": "html",
            "selector": "video, .plyr__video-wrapper, .plyr__video-embed",
            "match": "",
            "method": "contains",
            "min_count": 1
          }
        ]
      }
    }
  }
}