{
  "name": "禁片天堂",
  "base_url": "https://ttvvcc.work",
  "action_data": {
    "video_url": {
      "steps": [
        {
          "action": "request",
          "url": "{{base_url}}",
          "priority_scraper": true,
          "max_retries": 2,
          "timeout": 15
        },
        {
          "action": "select",
          "selector": "div.info h3",
          "attribute": "text",
          "multiple": true,
          "save_as": "h3_text_list"
        },
        {
          "action": "select",
          "selector": "div.info h4",
          "attribute": "text",
          "multiple": true,
          "save_as": "h4_text_list"
        },
        {
          "action": "extract_domains",
          "title_list": "h3_text_list",
          "content_list": "h4_text_list",
          "save_as": "domain_list"
        }
      ],
      "result": {
        "domains": "{{domain_list}}",
        "wd_url": "/video/<*>?ref=HEIMAO"
      },
      "logic": {
        "platform_names": [
          "禁片天堂"
        ],
        "invalid": [
          {
            "type": "html",
            "selector": "title",
            "match": "404 Not Found",
            "method": "contains"
          }
        ],
        "valid": [
          {
            "type": "link",
            "match": "video",
            "method": "contains"
          },
          {
            "type": "html",
            "selector": "video, iframe",
            "min_count": 1
          }
        ]
      }
    }
  }
}